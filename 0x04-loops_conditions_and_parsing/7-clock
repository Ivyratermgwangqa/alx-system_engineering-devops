#!/usr/bin/env bash
# This script displays the time for 12 hours and 59 minutes

hour=0

# Loop through hours from 0 to 12
while [ $hour -le 12 ]; do
    echo "Hour: $hour"
    
    minute=1

    # Loop through minutes from 1 to 59
    while [ $minute -le 59 ]; do
        echo "$minute"
        minute=$((minute + 1))
    done

    hour=$((hour + 1))
done
