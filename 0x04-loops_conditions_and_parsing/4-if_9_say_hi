#!/usr/bin/env bash
# This script displays "Best School" 10 times, with "Hi" on the 9th iteration

# Initialize a counter
count=0

# Define the condition for the while loop
while [ $count -lt 10 ]; do
    if [ $count -eq 8 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi

    # Increment the counter
    count=$((count + 1))
done
