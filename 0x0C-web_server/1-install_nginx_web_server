#!/usr/bin/env bash
# Installs and configures an Nginx server

# Use sudo for commands that require elevated privileges
sudo apt-get update
sudo apt-get install nginx -y

# Check if Nginx is already running
if ! sudo service nginx status > /dev/null; then
    sudo service nginx start
fi

# Set appropriate permissions for the HTML file
sudo chmod 644 /usr/share/nginx/html/index.html

# Create or update the HTML file with "Hello World!"
echo -e 'Hello World!' | sudo tee /usr/share/nginx/html/index.html > /dev/null

# Reload Nginx to apply changes
sudo service nginx reload

echo "Nginx installed and configured successfully!"
